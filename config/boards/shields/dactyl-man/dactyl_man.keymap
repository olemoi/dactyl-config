#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define HOST_OS 2

#include "../../../../zmk-nodefree-config/helper.h"
#include "../../../../zmk-nodefree-config/international_chars/danish.dtsi"

#define DEFAULT 0
#define CODE 1
#define NAV 2
#define MEDIA 3
#define NUM 4


/ {

    behaviors {
        bhm: balanced_homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <200>;    // <---[[moderate duration]]
            quick-tap-ms = <0>;
            flavor = "balanced";
            bindings = <&kp>, <&kp>;
        };
    };

    keymap {
        compatible = "zmk,keymap";
                // -----------------------------------------------------------------------------------------
                // |  Q  |  W  |  E  |  R  |  T  |                              |  Y  |  U   |  I  |  O  |  P  |
                // |  A  |  S  |  D  |  F  |  G  |                              |  H  |  J   |  K  |  L  |  Ø  |
                // |  Z  |  X  |  C  |  V  |  B  |                              |  N  |  M   |  ,  |  .  |  /  |
                //       |  ?  |  ?  |                                                       |  Æ  |  Å  |
                //                   |  CMD  |  SHIFT  |                       |  ENT | SPC  |
                //                           |   LS    |  LALT  |       |  LS  |  BSPC |
                //                           |   LS    |  LS    |       |  LS  |   LS  |
        default_layer {
            bindings = <
                    &kp Q     &kp W    &kp E     &kp R     &kp T                                        &kp Y     &kp U     &kp I     &kp O     &kp P    
                    &mt LALT A     &kp S    &mt LCTRL D     &lt NUM F     &kp G                         &kp H     &kp J     &kp K     &kp L     &mt CODE A 
                    &kp Z     &kp X    &kp C     &kp V     &kp B                                        &kp N     &kp M     &kp COMMA &kp DOT   &kp N1
                              &kp TAB   &kp ESC                                                                               &kp O   &kp SINGLE_QUOTE
                                                 &kp LSHIFT     &kp LGUI                                        &kp SPACE    &kp RET 
                                                            &kp LALT     &mo NAV                  &mo MEDIA     &kp BSPC 
                                                            &mo CODE   &kp N8                  &mo CODE   &kp N7
            >;
        };
        code_layer {
            bindings = <
                    &kp TAB     &kp F5    &kp F10    &kp F11      &kp F12                                       &trans     &kp LEFT_BRACE           &kp RIGHT_BRACE           &kp TILDE     &trans    
                    &kp ESC     &trans    &trans     &kp EQUAL    &trans                                        &trans     &kp LEFT_PARENTHESIS     &kp RIGHT_PARENTHESIS     &kp LT        &kp GT 
                    &trans      &trans    &trans     &trans       &trans                                        &trans     &kp LEFT_BRACKET         &kp RIGHT_BRACKET         &trans        &trans
                                &trans    &trans                                                                           &trans                   &trans
                                                     &trans       &tran                                         &trans     &trans
                                                                  &trans     &trans                  &trans     &trans
                                                                  &trans     &trans                  &trans     &trans
            >;
        };
        nav_layer {
            bindings = <
                    &trans     &trans    &trans     &trans     &trans                                 &trans     &trans   &kp UP     &trans      &trans
                    &kp ESC    &trans     &trans     &trans                                 &kp HOME     &kp LEFT    &kp DOWN     &kp RIGHT       &trans
                    &trans     &trans    &trans     &trans     &trans                                 &kp END     &trans    &trans      &trans     &trans
                              &trans     &trans                                                                           &kp PG_UP     &kp PG_DN
                                                 &trans     &trans                                        &trans     &trans
                                                            &trans     &trans                  &trans     &trans
                                                            &trans     &trans                  &trans     &trans
            >;
        };
        media_layer {
            bindings = <
                    &kp C_PREV     &kp C_PLAY_PAUSE    &kp C_NEXT     &trans     &trans                                 &bt BT_SEL 0     &bt BT_SEL 1    &bt BT_SEL 2     &bt BT_SEL 3     &bt BT_SEL 4
                    &kp C_VOL_DN     &kp C_MUTE    &kp C_VOL_UP     &trans     &trans                                 &trans     &kp N4    &kp N5     &kp N6     &trans
                    &trans     &trans    &trans     &trans     &trans                                 &kp N0     &kp N1    &kp N2     &kp N3     &trans
                              &trans     &trans                                                                           &trans     &trans
                                                 &trans     &trans                                        &trans     &trans
                                                            &trans     &trans                  &trans     &trans
                                                            &trans     &trans                  &trans     &trans
            >;
        };
        num_layer {
            bindings = <
                    &trans     &trans    &trans     &trans     &trans                                 &trans     &kp N7    &kp N8     &kp N9     &trans
                    &trans     &trans    &trans     &trans     &trans                                 &trans     &kp N4    &kp N5     &kp N6     &trans
                    &trans     &trans    &trans     &trans     &trans                                 &kp N0     &kp N1    &kp N2     &kp N3     &trans
                              &trans     &trans                                                                           &trans     &trans
                                                 &trans     &trans                                        &trans     &trans
                                                            &trans     &trans                  &trans     &trans
                                                            &trans     &trans                  &trans     &trans
            >;
        };
        
    };
};
